<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>College Alumni Portal</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <header>
        <h1>Welcome to the College Alumni Portal</h1>
        <nav>
            <ul>
                <li><a href="#viewAlumni">View Alumni</a></li>
                <li><a href="#registerEvent">Register for Event</a></li>
                <li><a href="#events">Upcoming Events</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <!-- View Alumni Section -->
        <section id="viewAlumni">
            <h2>Alumni Directory</h2>
            <div id="alumniList">
                <!-- Alumni list will be populated here -->
            </div>
        </section>

        <!-- Event Registration Section -->
        <section id="registerEvent">
            <h2>Register for an Event</h2>
            <form id="eventForm">
                <label for="alumniName">Alumni Name:</label>
                <input type="text" id="alumniName" name="alumniName" required>

                <label for="eventName">Event Name:</label>
                <input type="text" id="eventName" name="eventName" required>

                <label for="eventDate">Event Date:</label>
                <input type="date" id="eventDate" name="eventDate" required>

                <button type="submit">Register</button>
            </form>
            <p id="registrationStatus"></p>
        </section>

        <!-- Upcoming Events Section -->
        <section id="events">
            <h2>Upcoming Events</h2>
            <div id="eventList">
                <!-- Event list will be populated here -->
            </div>
        </section>
    </main>

    <footer>
        <p>&copy; 2024 College Alumni Portal</p>
    </footer>

    <script src="script.js"></script>
</body>
</html>
